
<div class="content">
  <!-- BEGIN LOGIN FORM -->

  <%= form_for(resource, as: resource_name, html: {class: "login-form"}, url: session_path(resource_name)) do |f| %>
      <h3 class="form-title">Simplicity Awaits.</h3>
      <p>Simply enter your email below and access a world of clarity in Project management</p>
      <p>The Project Information Management System (PIMS) provides a clear, simple but powerful approach to managing any project</p>
      <%if notice%>
        <div class="alert alert-error">
          <button class="close" data-dismiss="alert"></button>
          <span><%=notice%></span>
        </div>
      <%end%>
      <%if alert%>
        <div class="alert alert-error">
          <button class="close" data-dismiss="alert"></button>
          <span><%=alert%></span>
        </div>
      <%end%>
      <div class="alert alert-error hide">
        <button class="close" data-dismiss="alert"></button>
        <span>Enter any username and password.</span>
      </div>
      <div class="form-group">
        <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
        <label class="control-label visible-ie8 visible-ie9">Username</label>
        <div class="input-icon">
          <i class="icon-user"></i>
          <%= f.email_field :email, autofocus: true, class: "form-control placeholder-no-fix", placeholder: "Email Address (this will be your username)" %>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label visible-ie8 visible-ie9">Password</label>
          <div class="input-icon">
            <i class="icon-lock"></i>
            <%= f.password_field :password, autocomplete: "off", class: "form-control placeholder-no-fix", placeholder: "Password" %>

            </div>
          </div>
          <div class="form-actions">
            <label class="checkbox">
              <%= f.check_box :remember_me %>
              Remember me
            </label>
            <button type="submit" class="btn blue pull-right">
              Login <i class="m-icon-swapright m-icon-white"></i>
            </button>
          </div>
          <div class="forget-password">
            <h4>Forgot your password ?</h4>
            <p>
              no worries, click
              <%= link_to "here", new_password_path(resource_name), id: "forget-password" %>
              to reset your password.
            </p>
          </div>
          <div class="create-account">
            <p>
              By clicking
              <a href="<%= new_registration_path(resource_name)%>" id="register-btn" >Sign up</a>
              You agree to our Terms Of Service
            </p>
          </div>
        <%end%>
        <!-- END LOGIN FORM -->

      </div>








