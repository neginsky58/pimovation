
<div class="content">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "login-form" }) do |f| %>
      <h3 >Forget Password ?</h3>
      <p>Enter your e-mail address below to reset your password.</p>
      <div class="alert alert-error">
        <button class="close" data-dismiss="alert"></button>
        <span><%= devise_error_messages! %></span>
      </div>
      <div class="form-group">
        <div class="input-icon">
          <i class="icon-envelope"></i>
          <%= f.email_field :email, autofocus: true, class: "form-control placeholder-no-fix", placeholder: "Email" %>

          </div>
        </div>
        <div class="form-actions">
          <a href="<%= new_user_session_path %>">
            <button type="button" class="btn">
              <i class="m-icon-swapleft"></i>  Back
            </button>
          </a>
          <button type="submit" class="btn blue pull-right">
            Submit <i class="m-icon-swapright m-icon-white"></i>
          </button>
        </div>
      <%end%>
    </div>
