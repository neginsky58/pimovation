
<div class="content">
  <!-- BEGIN LOGIN FORM -->

  <%= form_for(resource, as: resource_name, html: {class: "login-form"}, url: registration_path(resource_name)) do |f| %>
      <h3 >Sign Up</h3>
      <p>Enter your personal details below:</p>
      <%if notice%>
        <div class="alert alert-error">
          <button class="close" data-dismiss="alert"></button>
          <span><%=notice%></span>
        </div>
      <%end%>
      <%if alert%>
        <div class="alert alert-error">
          <button class="close" data-dismiss="alert"></button>
          <span><%=alert%></span>
        </div>
      <%end%>
      <div class="form-group">
        <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
        <label class="control-label visible-ie8 visible-ie9">Username</label>
        <div class="input-icon">
          <i class="icon-user"></i>
          <%= f.email_field :email, autofocus: true, class: "form-control placeholder-no-fix", placeholder: "Email" %>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label visible-ie8 visible-ie9">Password</label>
          <div class="input-icon">
            <i class="icon-lock"></i>
            <%= f.password_field :password, autocomplete: "off", class: "form-control placeholder-no-fix", placeholder: "Password" %>

            </div>
          </div>
          <div class="form-group">
            <label class="control-label visible-ie8 visible-ie9">Password</label>
            <div class="input-icon">
              <i class="icon-lock"></i>

              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control placeholder-no-fix", placeholder: "Password Confirmation"  %>
              </div>
            </div>
            <div class="form-actions">
              <a href="<%= new_user_session_path %>">
                <button type="button" class="btn">
                  <i class="m-icon-swapleft"></i>  Back
                </button>
              </a>
              <button type="submit" class="btn blue pull-right">
                Sign up <i class="m-icon-swapright m-icon-white"></i>
              </button>
            </div>
          <%end%>
          <!-- END LOGIN FORM -->

        </div>

